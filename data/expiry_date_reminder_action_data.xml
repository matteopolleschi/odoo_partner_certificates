<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        
        <record id="email_template_edi_expiry_date_reminder" model="mail.template">
            <field name="name">Expiry Date Reminder...!!</field>
            <!--field name="email_from">${object.company_id.name}&lt;${object.company_id.email}&gt;</field-->
            <!--field name="email_to">${object.email}</field-->
            <field name="subject">Today Due Certificate -${object.expiry_date or 'n/a' }</field>
            <field name="model_id" ref="odoo_partner_certificates.model_res_partner" />
            <field name="auto_delete" eval="True" />
            <field name="body_html"><![CDATA[
                <div class="page">
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                        <p>Hello ${object.name},</p>
                        <p> This Email Is To Remind You That You Have Certificate(s) Expiring Today. </p>
                    </div>
                    <div>
                       <table class="table table-condensed">
                             <thead>
                                <tr>
                                    <th style="background-color:#9b9da0 !important;">Certificate Name</th>
                                    <th style="background-color:#9b9da0 !important;">Expiry Date</th>
                                    <th style="background-color:#9b9da0 !important;">Issuer</th>
                                    <th style="background-color:#9b9da0 !important;">Attachments</th>
                                </tr>
                             </thead>
                             <tbody>
                                    <tr>
                                        <td><span>${object.certificate_ids.name}</span></td>
                                        <td><span>${object.certificate_ids.expiry_date}</span></td>
                                        <td><span>${object.certificate_ids.issuer}</span></td>
                                        <td><span>${object.certificate_ids.attachments}</span></td>
                                    </tr>
                             </tbody>
                       </table>
                    </div>
                </div>
                ]]>
            </field>
        </record>

    </data>
</odoo>