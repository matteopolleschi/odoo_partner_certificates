<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_certificate">
        <field name="name">Certificate</field>
        <field name="description">Partner Certificates</field>
        <field name="sequence">5</field>
    </record>

    <record id="group_certificate_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="odoo_partner_certificates.module_category_certificate"/>
    </record>

    <record id="group_certificate_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="odoo_partner_certificates.module_category_certificate"/>
        <field name="implied_ids" eval="[(4, ref('group_certificate_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_certificate_user'))]"/>
        </record>
    </data>
</odoo>
